{
    "manifest_version": 2,
    "name": "Borderify-Reason",
    "version": "1.0",
    "description": "Adds a red border to all webpages matching mozilla.org.",
    "icons": {
        "48": "icons/border-48.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.mozilla.org/*"
            ],
            "js": [
                "src/borderify.bs.js"
            ]
        }
    ]
}